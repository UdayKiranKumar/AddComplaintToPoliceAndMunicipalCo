<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".AddCollectorComp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainpolice"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="collector complaint"
            android:textSize="25dp"
            android:textColor="@color/darkGreenPoly"
            android:gravity="center" />
        <EditText
            android:layout_marginTop="90dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"

            android:hint="Enter Name Here"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/editText1"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"

            android:hint="Enter phone number"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:id="@+id/editText2"
            android:inputType="phone"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"

            android:hint="Enter address"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:id="@+id/editText3"
            android:layout_marginTop="20dp" />
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="complaint:"/>

        <EditText android:layout_height="100dp"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hello"

            android:id="@+id/complaint_edit"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           android:layout_marginLeft="30dp"
            android:text="add complaint"
           android:layout_marginRight="30dp"
            android:background="@color/orangePoly"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</LinearLayout>